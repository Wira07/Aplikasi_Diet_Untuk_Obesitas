<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section with Wave -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="@drawable/profile_header_gradient">

            <!-- Animated Background Shapes -->
            <View
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-100dp"
                android:layout_marginEnd="-100dp"
                android:alpha="0.1"
                android:background="@drawable/floating_circle"
                android:rotation="45" />

            <View
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="-75dp"
                android:alpha="0.08"
                android:background="@drawable/floating_circle"
                android:rotation="-30" />

            <!-- Wave Shape -->
            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/wave_shape" />

            <!-- Profile Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Profile Picture with Enhanced Glow Effect -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_profile_picture"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="16dp"
                    app:cardCornerRadius="70dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/profile_picture_gradient">

                        <!-- Animated Ring -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/animated_ring" />

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerInParent="true"
                            android:contentDescription="Profile Picture"
                            android:src="@drawable/ic_person"
                            app:tint="@color/white" />

                        <!-- Enhanced Online Status Indicator -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="4dp"
                            android:elevation="8dp"
                            app:cardCornerRadius="16dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/online_indicator_enhanced" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Name with Enhanced Animation -->
                <TextView
                    android:id="@+id/tv_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="John Doe"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:shadowColor="@color/shadow_dark"
                    android:shadowRadius="8"
                    android:shadowDx="0"
                    android:shadowDy="2" />

                <!-- Email with Subtle Animation -->
                <TextView
                    android:id="@+id/tv_profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="john@example.com"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:elevation="4dp"
                    android:alpha="0.9" />

                <!-- Status Badge -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:elevation="6dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/success_light">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="6dp"
                        android:text="● Active"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="32dp">

            <!-- Personal Information Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_personal_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:elevation="12dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp">

                    <!-- Section Title with Icon Animation -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="16dp"
                            android:elevation="4dp"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="@color/primary_light">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_person_info"
                                app:tint="@color/white" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Informasi Personal"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <!-- Enhanced Info Items -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:elevation="2dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="@color/background_light">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="20dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginEnd="16dp"
                                android:elevation="4dp"
                                app:cardCornerRadius="18dp"
                                app:cardBackgroundColor="@color/accent_light">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_cake"
                                    app:tint="@color/white" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="Umur"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_age"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="25 tahun"
                                    android:textColor="@color/text_primary"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:elevation="2dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="@color/background_light">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="20dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginEnd="16dp"
                                android:elevation="4dp"
                                app:cardCornerRadius="18dp"
                                app:cardBackgroundColor="@color/secondary_light">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_gender"
                                    app:tint="@color/white" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="Jenis Kelamin"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_gender"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="Laki-laki"
                                    android:textColor="@color/text_primary"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Enhanced Physical Stats Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Height Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:layout_weight="1"
                            android:elevation="6dp"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="@color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/stat_card_gradient_height"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="24dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_marginBottom="12dp"
                                    android:elevation="4dp"
                                    app:cardCornerRadius="24dp"
                                    app:cardBackgroundColor="@color/white">

                                    <ImageView
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_height"
                                        app:tint="@color/primary" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="Tinggi"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:alpha="0.9" />

                                <TextView
                                    android:id="@+id/tv_height"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="170 cm"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Weight Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:elevation="6dp"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="@color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/stat_card_gradient_weight"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="24dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_marginBottom="12dp"
                                    android:elevation="4dp"
                                    app:cardCornerRadius="24dp"
                                    app:cardBackgroundColor="@color/white">

                                    <ImageView
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_weight"
                                        app:tint="@color/secondary" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="Berat"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:alpha="0.9" />

                                <TextView
                                    android:id="@+id/tv_weight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="70 kg"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Enhanced BMI Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_bmi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:elevation="16dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Animated Background Pattern -->
                    <View
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="-100dp"
                        android:alpha="0.1"
                        android:background="@drawable/bmi_pattern"
                        android:rotation="45" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bmi_card_enhanced_gradient"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="32dp">

                        <!-- BMI Icon -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginBottom="16dp"
                            android:elevation="8dp"
                            app:cardCornerRadius="30dp"
                            app:cardBackgroundColor="@color/white">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_fitness"
                                app:tint="@color/primary" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Body Mass Index"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:alpha="0.9" />

                        <TextView
                            android:id="@+id/tv_bmi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="24.2"
                            android:textColor="@color/white"
                            android:textSize="48sp"
                            android:textStyle="bold"
                            android:shadowColor="@color/shadow_dark"
                            android:shadowRadius="4"
                            android:shadowDx="0"
                            android:shadowDy="2" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="6dp"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="@color/white">

                            <TextView
                                android:id="@+id/tv_bmi_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="8dp"
                                android:text="Normal"
                                android:textColor="@color/primary"
                                android:textSize="16sp" />
                        </androidx.cardview.widget.CardView>

                        <!-- BMI Scale Indicator -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="6dp"
                                android:layout_weight="1"
                                android:background="@drawable/bmi_scale_underweight"
                                android:layout_marginEnd="2dp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="6dp"
                                android:layout_weight="1"
                                android:background="@drawable/bmi_scale_normal"
                                android:layout_marginHorizontal="2dp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="6dp"
                                android:layout_weight="1"
                                android:background="@drawable/bmi_scale_overweight"
                                android:layout_marginHorizontal="2dp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="6dp"
                                android:layout_weight="1"
                                android:background="@drawable/bmi_scale_obese"
                                android:layout_marginStart="2dp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Enhanced Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Edit Profile Button -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:elevation="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/white">

                    <Button
                        android:id="@+id/btn_edit_profile"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:background="@drawable/button_gradient_primary"
                        android:drawableStart="@drawable/ic_edit"
                        android:drawablePadding="12dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Edit Profil"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textAllCaps="false" />
                </androidx.cardview.widget.CardView>

                <!-- Logout Button -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:elevation="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/white">

                    <Button
                        android:id="@+id/btn_logout"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:background="@drawable/button_gradient_danger_enhanced"
                        android:drawableStart="@drawable/ic_logout"
                        android:drawablePadding="12dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Keluar"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textAllCaps="false" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Additional Quick Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Settings -->
                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="12dp"
                    android:elevation="6dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/accent_light">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_settings"
                        app:tint="@color/white" />
                </androidx.cardview.widget.CardView>

                <!-- History -->
                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="12dp"
                    android:elevation="6dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/secondary_light">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_history"
                        app:tint="@color/white" />
                </androidx.cardview.widget.CardView>

                <!-- Share -->
                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="12dp"
                    android:elevation="6dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/success_light">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_share"
                        app:tint="@color/white" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>