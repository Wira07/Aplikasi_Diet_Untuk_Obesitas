<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section with Wave -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp">

            <!-- Animated Background Shapes -->
            <View
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-100dp"
                android:layout_marginEnd="-100dp"
                android:alpha="0.1"
                android:background="@drawable/floating_circle"
                android:rotation="45" />

            <View
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="-75dp"
                android:alpha="0.08"
                android:background="@drawable/floating_circle"
                android:rotation="-30" />

            <!-- Profile Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Profile Picture with Enhanced Glow Effect -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_profile_picture"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="16dp"
                    app:cardCornerRadius="70dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/profile_picture_gradient">

                        <!-- Animated Ring -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/animated_ring" />

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerInParent="true"
                            android:contentDescription="Profile Picture"
                            android:src="@drawable/ic_person"
                            app:tint="@color/white" />

                        <!-- Enhanced Online Status Indicator -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="4dp"
                            android:elevation="8dp"
                            app:cardCornerRadius="16dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/online_indicator_enhanced" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Name with Enhanced Animation -->
                <TextView
                    android:id="@+id/tv_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Loading..."
                    android:textColor="@color/black_30"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:shadowColor="@color/shadow_dark"
                    android:shadowRadius="8"
                    android:shadowDx="0"
                    android:shadowDy="2" />

                <!-- Email with Subtle Animation -->
                <TextView
                    android:id="@+id/tv_profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Loading..."
                    android:textColor="@color/black_30"
                    android:textSize="16sp"
                    android:elevation="4dp"
                    android:alpha="0.9" />

                <!-- Status Badge -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:elevation="6dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/success_light">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="6dp"
                        android:text="â— Active"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="32dp">

            <!-- Personal Information Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_personal_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:elevation="12dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp">

                    <!-- Section Title with Icon Animation -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="16dp"
                            android:elevation="4dp"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="@color/primary_light">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_person_info"
                                app:tint="@color/white" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Informasi Personal"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <!-- Alternative Name Display (for compatibility) -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:elevation="2dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="@color/background_light"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="20dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginEnd="16dp"
                                android:elevation="4dp"
                                app:cardCornerRadius="18dp"
                                app:cardBackgroundColor="@color/primary_light">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_person"
                                    app:tint="@color/white" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="Nama"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="Loading..."
                                    android:textColor="@color/text_primary"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Alternative Email Display (for compatibility) -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:elevation="2dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="@color/background_light"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="20dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginEnd="16dp"
                                android:elevation="4dp"
                                app:cardCornerRadius="18dp"
                                app:cardBackgroundColor="@color/white">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_email"
                                    app:tint="@color/white" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="Email"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_email"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="Loading..."
                                    android:textColor="@color/text_primary"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Enhanced Age Info -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:elevation="2dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="@color/background_light">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="20dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginEnd="16dp"
                                android:elevation="4dp"
                                app:cardCornerRadius="18dp"
                                app:cardBackgroundColor="@color/info_light">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_calendar"
                                    app:tint="@color/white" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="Usia"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_age"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="Loading..."
                                    android:textColor="@color/text_primary"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Enhanced Gender Info -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="2dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="@color/background_light">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="20dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginEnd="16dp"
                                android:elevation="4dp"
                                app:cardCornerRadius="18dp"
                                app:cardBackgroundColor="@color/warning_light">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_gender"
                                    app:tint="@color/white" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="Jenis Kelamin"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_gender"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="Loading..."
                                    android:textColor="@color/text_primary"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Action Buttons Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <!-- WhatsApp CS Button (renamed from Edit Profile) -->
<!--                <androidx.cardview.widget.CardView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginBottom="16dp"-->
<!--                    android:elevation="8dp"-->
<!--                    app:cardCornerRadius="20dp"-->
<!--                    app:cardBackgroundColor="@color/success_primary">-->

<!--                    <Button-->
<!--                        android:id="@+id/btn_edit_profile"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="56dp"-->
<!--                        android:background="@android:color/transparent"-->
<!--                        android:fontFamily="@font/poppins_bold"-->
<!--                        android:text="ðŸ’¬ Hubungi Customer Service"-->
<!--                        android:textColor="@color/white"-->
<!--                        android:textSize="16sp"-->
<!--                        android:drawableStart="@drawable/ic_whatsapp"-->
<!--                        android:drawablePadding="12dp"-->
<!--                        android:paddingHorizontal="24dp"-->
<!--                        android:gravity="center"-->
<!--                        android:elevation="0dp"-->
<!--                        android:stateListAnimator="@null" />-->
<!--                </androidx.cardview.widget.CardView>-->

                <!-- Logout Button -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/error_primary">

                    <Button
                        android:id="@+id/btn_logout"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/poppins_bold"
                        android:text="ðŸšª Keluar"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:drawableStart="@drawable/ic_logout"
                        android:drawablePadding="12dp"
                        android:paddingHorizontal="24dp"
                        android:gravity="center"
                        android:elevation="0dp"
                        android:stateListAnimator="@null" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Footer Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Aplikasi Diet untuk Obesitas"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:alpha="0.7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Version 1.0.0"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"
                    android:alpha="0.5" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>