<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Dark Mode -->
    <style name="Base.Theme.AplikasiDietUntukObesitas" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- Warna Utama untuk Dark Mode -->
        <item name="colorPrimary">@color/primary_dark_mode</item>
        <item name="colorOnPrimary">@color/black_30</item>

        <!-- Warna Sekunder untuk Dark Mode -->
        <item name="colorSecondary">@color/accent_dark_mode</item>
        <item name="colorOnSecondary">@color/black_30</item>

        <!-- Warna Surface untuk Dark Mode -->
        <item name="colorSurface">@color/background_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>

        <!-- Warna Background -->
        <item name="android:colorBackground">@color/background_dark</item>

        <!-- Status bar untuk Dark Mode -->
        <item name="android:statusBarColor">@color/surface_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/surface_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="Theme.AplikasiDietUntukObesitas" parent="Base.Theme.AplikasiDietUntukObesitas" />

    <!-- Text Input untuk Dark Mode -->
    <style name="WhiteTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_dark_mode</item>
        <item name="android:textColorHint">@color/text_secondary_dark</item>
        <item name="hintTextColor">@color/text_secondary_dark</item>
        <item name="helperTextTextColor">@color/text_secondary_dark</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="boxBackgroundColor">@color/surface_variant_dark</item>
    </style>

    <!-- Enhanced Card View Style untuk Dark Mode -->
    <style name="CustomCardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/surface_card_dark</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Bottom Navigation Text Styles untuk Dark Mode -->
    <style name="BottomNavTextActive" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/nav_selected_dark</item>
    </style>

    <style name="BottomNavTextInactive" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/nav_unselected_dark</item>
    </style>

    <!-- Button Styles untuk Dark Mode -->
    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_dark_mode</item>
        <item name="android:textColor">@color/text_on_primary_dark</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:stateListAnimator">@animator/button_state_animator</item>
    </style>

    <style name="SecondaryButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_dark_mode</item>
        <item name="android:textColor">@color/primary_dark_mode</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColorHint">@color/text_secondary_dark</item>
    </style>

    <!-- Text Input Styles untuk Dark Mode -->
    <style name="CustomTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/primary_dark_mode</item>
        <item name="hintTextColor">@color/text_secondary_dark</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="boxBackgroundColor">@color/surface_variant_dark</item>
    </style>

    <!-- Typography Styles untuk Dark Mode -->
    <style name="HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:lineSpacingExtra">1dp</item>
    </style>

    <!-- Fab Style untuk Dark Mode -->
    <style name="CustomFab" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/accent_dark_mode</item>
        <item name="tint">@color/text_on_accent_dark</item>
        <item name="elevation">10dp</item>
        <item name="pressedTranslationZ">14dp</item>
        <item name="borderWidth">0dp</item>
    </style>

    <!-- Additional Dark Theme Styles -->

    <!-- Toolbar Style untuk Dark Mode -->
    <style name="CustomToolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/surface_dark</item>
        <item name="titleTextColor">@color/text_primary_dark</item>
        <item name="subtitleTextColor">@color/text_secondary_dark</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Progress Bar Style untuk Dark Mode -->
    <style name="CustomProgressBar" parent="Widget.Material3.LinearProgressIndicator">
        <item name="indicatorColor">@color/primary_dark_mode</item>
        <item name="trackColor">@color/surface_variant_dark</item>
        <item name="trackCornerRadius">4dp</item>
    </style>

    <!-- Switch Style untuk Dark Mode -->
    <style name="CustomSwitch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">@color/primary_dark_mode</item>
        <item name="trackTint">@color/surface_variant_dark</item>
    </style>

    <!-- Divider Style untuk Dark Mode -->
    <style name="CustomDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_dark</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>

    <!-- List Item Style untuk Dark Mode -->
    <style name="ListItemTitle" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItemSubtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>

    <!-- Chip Style untuk Dark Mode -->
    <style name="CustomChip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/surface_variant_dark</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="chipStrokeColor">@color/primary_dark_mode</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <!-- Bottom Sheet Style untuk Dark Mode -->
    <style name="CustomBottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="backgroundTint">@color/surface_card_dark</item>
        <item name="shapeAppearance">@style/CustomBottomSheetShape</item>
    </style>

    <style name="CustomBottomSheetShape" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

</resources>